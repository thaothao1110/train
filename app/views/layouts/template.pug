include ../mixins/all

block vars
  -title = 'Template'

doctype html
html(class="no-js", lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
    title=title
    meta(name="viewport", content="width=device-width, minimal-ui")
    link(rel="icon", href="favicon-16x16.png", type="image/x-icon", sizes="16x16")
    link(rel="stylesheet", href="style/libs.css")
    link(rel="stylesheet", href="style/style.css")
    style.
      .template {margin: 20px; background: #eee; font-size: 1.4rem;}
      .template h1 {text-align: center; text-transform: uppercase; font-size: 2.8rem;}
      .template h2 {margin: 20px 0; border-bottom: 1px solid #ccc; font-weight: normal; font-size: 2rem;}
    script(src="js/modernizr.js")
  body.template
    block container
    include ../blocks/script
    noscript JavaScript is off. Please enable to view full site.
